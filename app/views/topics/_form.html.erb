<h1>Edit Topic</h1>

<div class="row">
  <div class="col-md-8">
  <%= form_for @topic do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: "Enter topic name" %>
    </div>
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  </div>
</div>
  <% end %>



