<% if current_user %>
<h1>Listing all blocmarks</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th>Time created</th>
    

      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.title %></td>
        <td><%= bookmark.url %></td>
        <td>Created <%= time_ago_in_words(bookmark.created_at) %> ago</td>

        <td><%= link_to 'Show', bookmark %></td>
        <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
        <td><%= link_to 'Destroy', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%=link_to "Like", bookmark_likes_path(bookmark), method: :post, remote: true  %>     </tr></td>


     

    <% end %>
  </tbody>
</table>

<br>
<% end %>
<%= link_to 'New Bookmark', new_bookmark_path %>

